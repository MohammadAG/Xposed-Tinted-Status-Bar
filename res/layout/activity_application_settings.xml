<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ApplicationSettings"
    tools:ignore="contentDescription,NestedWeights" >

    <TextView
        android:id="@+id/currentActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/all_activities_title" />

    <LinearLayout
        android:id="@+id/package_specifc_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="vertical" >

        <CheckBox
            android:id="@+id/link_panels_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/link_panel_views_title" />

        <CheckBox
            android:id="@+id/react_actionbar_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/react_actionbar_title" />

        <CheckBox
            android:id="@+id/reverse_tint_actionbar_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reverse_tint_actionbar_title" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/activity_specifc_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="vertical" >
        
        <CheckBox
            android:id="@+id/translucent_status_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/translucent_status_views_title" 
            android:layout_marginLeft="0dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.14"
        android:baselineAligned="false" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/status_bar_tint_text" />

            <Button
                android:id="@+id/status_bar_tint_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/status_bar_icon_tint_text" />

            <Button
                android:id="@+id/icon_tint_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.14"
        android:baselineAligned="false" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/navigation_bar_tint_text" />

            <Button
                android:id="@+id/navigation_bar_tint_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/navigation_bar_icon_tint_text" />

            <Button
                android:id="@+id/navigation_bar_icon_tint_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/reset_to_auto_detect_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reset_to_auto_detect" />

</LinearLayout>